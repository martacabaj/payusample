<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
  android:id="@+id/layout_container"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipToPadding="false"
  app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.payu.android.sdk.payment.widget.PaymentMethodWidget
      android:id="@+id/payment_widget"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="@dimen/payment_side_padding"
      android:layout_marginLeft="@dimen/payment_side_padding"
      android:layout_marginRight="@dimen/payment_side_padding"
      android:layout_marginStart="@dimen/payment_side_padding"
      android:layout_marginTop="8dp"

      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:payuTheme="classic" />
  </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>


