<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingBottom="@dimen/payment_top_bottom_padding">

  <TextView
    android:id="@+id/number_of_line_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="@dimen/payment_side_padding"
    android:layout_marginTop="@dimen/payment_top_bottom_padding"

    android:textSize="18dp" />

  <zbiletem.zbiletem.views.ExtendedEditText
    android:id="@+id/line_number_edit_text"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/payment_side_padding"
    android:layout_marginTop="@dimen/payment_top_bottom_padding"
    android:ems="10"
    android:gravity="end"
    android:inputType="textVisiblePassword"
    android:maxLength="10"
    android:textAlignment="textEnd"
    android:textSize="14dp"
    tools:text="wwwwwwwwww" />

  <TextView
    android:id="@+id/line_number_error"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/number_of_line_label"
    android:layout_below="@id/line_number_edit_text"
    android:layout_marginBottom="@dimen/payment_top_bottom_padding"
    android:letterSpacing="0.02"

    android:textColor="@android:color/holo_red_dark"
    android:textSize="12dp"
    android:visibility="gone" />

</RelativeLayout>